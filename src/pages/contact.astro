  <h1>Contact Us</h1>
  <form method="POST">
    <label>
      Name:<br />
      <input type="text" name="name" required />
    </label><br /><br />
    <label>
      Email:<br />
      <input type="email" name="email" required />
    </label><br /><br />
    <label>
      Subject:<br />
      <input type="text" name="subject" />
    </label><br /><br />
    <label>
      Message:<br />
      <textarea name="message" rows="5" required></textarea>
    </label><br /><br />
    <button type="submit">Send</button>
  </form>
</body>
</html>
